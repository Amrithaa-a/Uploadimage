@model Uploadimage.Models.Image

@{
    ViewBag.Title = "Add";
}

<main aria-labelledby="title">
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-body bg-light p-4 rounded-lg shadow">
                        <h2 class="card-title text-center mb-4">Upload Image</h2>

                        @using (Html.BeginForm("Add", "Image", FormMethod.Post, new { enctype = "multipart/form-data" }))
                        {
                            @Html.AntiForgeryToken()

                            <div class="form-group">
                                @Html.LabelFor(model => model.Title)
                                @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group mt-3">
                                @Html.LabelFor(model => model.ImagePath)
                                <input type="file" name="ImageFile" required class="form-control-file">
                            </div>

                            <div class="text-center mt-4">
                                <button type="submit" class="btn btn-primary">Upload</button>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
        <div class="text-center mt-3">
            <button class="btn btn-light" onclick="window.location.href='@Url.Action("Index", "Image")'">Back to List</button>
        </div>

    </div>
</main>
